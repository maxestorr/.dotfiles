# i3-gaps config
# Author: Max Storr
# Date: 12.04.2019 #---Basic Settings---# #
font pango:System San Francisco Display 11


# #---Key Bindings---# #
set $mod Mod4

# Restart i3
bindsym $mod+Shift+r restart
# Exit i3 (logout)
bindsym $mod+Shift+e exec i3-msg exit
#Lock i3
bindsym $mod+Shift+x exec ~/.scripts/lock

# Program hotkeys
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+d exec dmenu_run
bindsym $mod+b exec chromium-browser
bindsym $mod+n exec nautilus
bindsym $mod+q exec qutebrowser
bindsym $mod+m exec spotify
bindsym $mod+c exec flameshot gui
bindsym $mod+r exec i3-sensible-terminal -e ranger

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left 30
bindsym $mod+Shift+j move down 30
bindsym $mod+Shift+k move up 30
bindsym $mod+Shift+l move right 30

# Kill focused window
bindsym $mod+Shift+q kill

# Resize focused window (floating windows by px, tiles by ppt)
bindsym $mod+Shift+y resize shrink width 10 px or 2 ppt
bindsym $mod+Shift+u resize shrink height 10 px or 2 ppt
bindsym $mod+Shift+i resize grow height 10 px or 2 ppt
bindsym $mod+Shift+o resize grow width 10 px or 2 ppt

# Toggle splits to spawn horizontal/vertical
bindsym $mod+t split toggle
bindsym $mod+Shift+t layout toggle split

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Floating window control
# mod+mouse to drag floating windows
floating_modifier $mod

# Toggle tiling/floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle


# #---i3-gaps Settings---# #
# Disable window titlebars for i3-gaps to work
for_window [class=".*"] border pixel 1

# Gap sizes
gaps inner 30

# Adjust sizes
bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5
bindsym $mod+s gaps inner current plus 5
bindsym $mod+Shift+s gaps inner current minus 5


# #---Function Keys---# #
# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# Brightness
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

# Spotify
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym XF86AudioPlay exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause 
bindsym XF86AudioNext exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next


# #---Workspaces---# #
# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


# #---Startup Applications---# #
# Set background using feh & reload pywal colourscheme
exec --no-startup-id setbg
exec --no-startup-id ~/.local/bin/wal -R
# Launch Compton compositor with specified config and daemonise '-b'
exec_always --no-startup-id compton --config ~/.config/compton.conf -b


# #---Window Specific Settings---# #
# Applications that should be floating windows
for_window [class="feh"] floating enable
for_window [class="Nautilus"] floating enable
for_window [class="Nautilus"] resize set 750 500
for_window [class="File-roller"] floating enable
for_window [class="File-roller"] resize set 750 500
for_window [class="fiji-Main"] floating enable
for_window [class="Eog"] floating enable
# ToDo: Include a rule for chromium pop-ups

# Applications that belong on a specific workspace
# 'assign' command won't work on Spotify
for_window [class="Spotify"] move to workspace $ws10


# #---Enable Devices---# #
# Enable normal touchpad (xinput device 11) behaviour
exec xinput set-prop 11 "libinput Tapping Enabled" 1
exec xinput set-prop 11 "libinput Natural Scrolling Enabled" 1

# #---i3 Status Bar---# #
# I use those colors at bar and window color settings
set $bg-color 	         #20202C
set $inactive-bg-color   #20202C
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color 	 #E53935


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available).
bar {
    status_command i3status
    tray_output primary

    colors {
        background $bg-color
        separator #757575
        #                  border             background         text
        focused_workspace  $bg-color          $bg-color          $text-color
        inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
        urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
    }
}

set_from_resource $c0 color0 #f0f0f0
set_from_resource $c1 color1 #f0f0f0
set_from_resource $c2 color2 #f0f0f0
set_from_resource $c3 color3 #f0f0f0
set_from_resource $c4 color4 #f0f0f0
set_from_resource $c5 color5 #f0f0f0
set_from_resource $c6 color6 #f0f0f0
set_from_resource $c7 color7 #f0f0f0
set_from_resource $c8 color8 #f0f0f0
set_from_resource $c9 color9 #f0f0f0
set_from_resource $c10 color10 #f0f0f0
set_from_resource $c11 color11 #f0f0f0
set_from_resource $c12 color12 #f0f0f0
set_from_resource $c13 color13 #f0f0f0
set_from_resource $c14 color14 #f0f0f0
set_from_resource $c15 color15 #f0f0f0

# class                 border  backgr. text indicator child_border
client.focused          $c7     $c7     $c0  $c7       $c7
client.focused_inactive $c2     $c2     $c7  $c2       $c2
client.unfocused        $c2     $c2     $c7  $c2       $c2
client.urgent           $c4     $c4     $c0  $c2       $c2
client.placeholder      $c2     $c2     $c7  $c2       $c2

client.background       $c0

# Modeline for vim syntax highlighting.
# vim:filetype=i3config
